#include <stdio.h>
#include <stdlib.h>

int main() {
    int n;
    scanf("%d", &n);

    // Dynamic allocation of n x n matrix
    int **arr = (int **)malloc(n * sizeof(int *));
    for (int i = 0; i < n; i++)
        arr[i] = (int *)malloc(n * sizeof(int));

    int top = 0, bottom = n - 1;
    int left = 0, right = n - 1;
    int val = 1;

    while (top <= bottom && left <= right) {

        // Left → Right
        for (int j = left; j <= right; j++)
            arr[top][j] = val++;
        top++;

        // Top → Bottom
        for (int i = top; i <= bottom; i++)
            arr[i][right] = val++;
        right--;

        // Right → Left
        for (int j = right; j >= left; j--)
            arr[bottom][j] = val++;
        bottom--;

        // Bottom → Top
        for (int i = bottom; i >= top; i--)
            arr[i][left] = val++;
        left++;
    }

    // Print matrix
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++)
            printf("%d ", arr[i][j]);
        printf("\n");
    }

    // Free memory
    for (int i = 0; i < n; i++)
        free(arr[i]);
    free(arr);

    return 0;
}
